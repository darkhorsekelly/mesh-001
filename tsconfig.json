{
    "compilerOptions": {
      // Base options
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "verbatimModuleSyntax": true,

      // Strict type checking
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitOverride": true,

      // Module resolution
      "module": "NodeNext",
      "outDir": "dist",

      // JSX support for React
      "jsx": "react-jsx",

      // Libraries
      "lib": [
        "es2022",
        "dom",
        "dom.iterable"
      ],

      // Vite compatibility
      "types": ["vite/client"]
    },
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }